// 代码块语言标识样式（右上角YML）
.highlight-wrap {
  position: relative;
  .code-lang {
    position: absolute;
    top: 6px;
    right: 8px;
    font-size: 0.65em;  // 优化：大幅缩小语言标签字体（从 0.75em 改为 0.65em，BASH更小）
    font-weight: 400;
    background: transparent;
    z-index: 10;
    opacity: 0.7;  // 减轻视觉强度
  }
  // 暗黑模式适配
  .dark-theme & .code-lang {
    color: #888;
    &:hover {
      background: transparent;
      opacity: 1;
    }
  }
}

// 代码块优化：隐藏滚动条并设置合理的内容溢出
pre, code {
  max-width: 100%;
  word-wrap: break-word;
  overflow-wrap: break-word;
  white-space: pre-wrap;
}

.highlight {
  overflow: hidden;  // 优化：完全隐藏滚动条
  word-break: break-word;
  font-size: 0.92em;   // 优化：进一步缩小代码字体
  line-height: 1.5;
  
  // 彻底隐藏滚动条
  &::-webkit-scrollbar {
    display: none;
  }
  -ms-overflow-style: none;  // IE/Edge
  scrollbar-width: none;  // Firefox
}

// 优化行号样式，更紧凑融合
.gutter {
  line-height: 1.5;
}

.line {
  position: relative;
}

// 代码块字体进一步优化
figure.highlight {
  font-size: 0.92em;
}

figure.highlight pre {
  font-size: 0.92em;
  line-height: 1.5;
  margin: 0;
}