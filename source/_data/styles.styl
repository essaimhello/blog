// 代码块语言标识样式（右上角YML）
.highlight-wrap {
  position: relative;
  .code-lang {
    position: absolute;
    top: 8px;
    right: 8px;
    font-size: 0.8em;
    font-weight: 500;
    background: transparent;
    z-index: 10;
  }
  // 暗黑模式适配
  .dark-theme & .code-lang {
    color: #888;
    &:hover {
      background: #333;
    }
  }
}