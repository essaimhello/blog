// 代码块语言标识样式（右上角YML） - 使用 !important 确保覆盖主题样式
.highlight-wrap {
  position: relative !important;
  
  .code-lang {
    position: absolute !important;
    top: 5px !important;
    right: 8px !important;
    font-size: 0.55em !important;  // 极小化 BASH 标签
    font-weight: 400 !important;
    background: transparent !important;
    z-index: 10 !important;
    opacity: 0.6 !important;
    color: #999 !important;
    letter-spacing: 0 !important;
  }
  
  .dark-theme & .code-lang {
    color: #666 !important;
    &:hover {
      opacity: 1 !important;
    }
  }
}

// 代码块滚动条和字体优化 - 彻底隐藏滚动条
.highlight, .highlight-container, figure.highlight {
  overflow: hidden !important;  // 彻底隐藏所有滚动条
  overflow-x: hidden !important;
  overflow-y: visible !important;
  max-width: 100% !important;
  
  // 隐藏 webkit 滚动条（Chrome/Safari/Edge）
  &::-webkit-scrollbar {
    display: none !important;
    width: 0 !important;
    height: 0 !important;
  }
  
  // Firefox 隐藏滚动条
  scrollbar-width: none !important;
  -ms-overflow-style: none !important;
}

// 代码内容自动换行，不出现滚动条
.highlight table {
  width: 100% !important;
  table-layout: fixed !important;
}

.highlight td {
  word-break: break-word !important;
  white-space: pre-wrap !important;
  overflow: visible !important;
}

// 代码块字体全局优化
pre, code {
  font-size: 0.90em !important;
  line-height: 1.5 !important;
  word-wrap: break-word !important;
  overflow-wrap: break-word !important;
  white-space: pre-wrap !important;
  max-width: 100% !important;
}

figure.highlight {
  font-size: 0.90em !important;
  line-height: 1.5 !important;
  margin: 0 !important;
  padding: 12px !important;
  
  pre {
    font-size: 0.90em !important;
    line-height: 1.5 !important;
    margin: 0 !important;
    border: none !important;
    background: transparent !important;
  }
  
  code {
    font-size: 0.90em !important;
    line-height: 1.5 !important;
  }
}

// 行号样式紧凑融合
.gutter {
  line-height: 1.5 !important;
  font-size: 0.90em !important;
  color: #999 !important;
}

.line {
  line-height: 1.5 !important;
}
